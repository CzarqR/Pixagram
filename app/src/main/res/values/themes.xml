<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pixagram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryVariant">@color/amber_500_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/nav_bar_color</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>

        <item name="android:textColor">@color/black</item>

    </style>


    <!--    Make toolbar SearchView text white-->
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


    <style name="BottomPlaceHolder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_place_holder</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">start</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>



    <style name="DividerBase">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/amber_500</item>
    </style>

    <style name="Divider" parent="DividerBase">
        <item name="android:background">@color/blue_800_dark</item>

    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <dimen name="bottom_place_holder">64dp</dimen>

    <style name="SocialTextViewStyle" parent="Widget.SocialView">
        <item name="socialFlags">hashtag|mention|hyperlink</item>
        <item name="mentionColor">@color/mention_color</item>
        <item name="hyperlinkColor">@color/hyperlink_color</item>
        <item name="hashtagColor">@color/hashtag_color</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>


</resources>